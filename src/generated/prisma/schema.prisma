generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Movie {
  id           Int        @id
  title        String
  overview     String
  releaseDate  DateTime
  posterPath   String?
  backdropPath String?
  popularity   Float
  voteAverage  Float
  voteCount    Int
  genres       Genre[]    @relation("MovieToGenre")
  actors       Actor[]    @relation("MovieToActor")
  directors    Director[] @relation("MovieToDirector")
}

model Actor {
  id     Int     @id
  name   String
  movies Movie[] @relation("MovieToActor")
}

model Director {
  id     Int     @id
  name   String
  movies Movie[] @relation("MovieToDirector")
}

model Genre {
  id     Int     @id
  name   String
  movies Movie[] @relation("MovieToGenre")
}
